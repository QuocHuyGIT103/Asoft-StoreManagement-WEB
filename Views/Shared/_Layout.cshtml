<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!-- Thêm Tailwind CSS qua CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Loại bỏ các bundle cũ của Bootstrap và Modernizr để tránh xung đột -->
    @Styles.Render("~/Content/css") <!-- Giữ nếu bạn có CSS tùy chỉnh -->
    <style>
        /* CSS để footer cố định ở dưới cùng */
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .container-body {
            flex: 1 0 auto;
            width: 100%; /* Đảm bảo chiếm toàn bộ chiều rộng */
        }
        footer {
            flex-shrink: 0;
        }
    </style>
</head>
<body class="bg-gray-100 font-sans">
    <nav class="bg-gradient-to-r from-gray-800 to-gray-900 text-white shadow-lg">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <!-- Logo/Brand -->
            <a href="@Url.Action("Index", "Home")" class="text-2xl font-bold text-white hover:text-yellow-300 transition duration-300">Asoft</a>

            <!-- Menu Toggle cho mobile -->
            <button type="button" class="md:hidden text-white focus:outline-none" id="menu-toggle">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                </svg>
            </button>

            <!-- Menu chính -->
            <div class="hidden md:flex md:items-center space-x-6" id="nav-menu">
                <!-- Menu Home, About, Contact -->
                <div class="flex space-x-6">
                    <a href="@Url.Action("Index", "Home")" class="hover:text-yellow-300 transition duration-300">Home</a>
                    <a href="@Url.Action("About", "Home")" class="hover:text-yellow-300 transition duration-300">About</a>
                    <a href="@Url.Action("Contact", "Home")" class="hover:text-yellow-300 transition duration-300">Contact</a>
                </div>

                <!-- Danh mục quản lý -->
                <div class="flex space-x-6">
                    <a href="@Url.Action("Index", "Product")" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-300">Quản Lý Sản Phẩm</a>
                    <a href="@Url.Action("Index", "Customer")" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition duration-300">Quản Lý Khách Hàng</a>
                    <a href="@Url.Action("Index", "Invoice")" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition duration-300">Quản Lý Hóa Đơn</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-body mx-auto p-4 mt-6 bg-white shadow-md rounded-lg">
        @RenderBody()
    </div>

    <hr class="my-6 border-gray-300" />

    <footer class="bg-gray-800 text-white text-center py-4">
        <p>© @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    <!-- JavaScript cho menu responsive -->
    <script>
        document.getElementById('menu-toggle').addEventListener('click', function () {
            const navMenu = document.getElementById('nav-menu');
            navMenu.classList.toggle('hidden');
            navMenu.classList.toggle('flex');
            navMenu.classList.toggle('flex-col');
            navMenu.classList.toggle('space-y-4');
            navMenu.classList.toggle('p-4');
            navMenu.classList.toggle('bg-gray-900');
            navMenu.classList.toggle('absolute');
            navMenu.classList.toggle('top-16');
            navMenu.classList.toggle('right-4');
            navMenu.classList.toggle('rounded-lg');
            navMenu.classList.toggle('shadow-lg');
            navMenu.classList.toggle('z-10');
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>