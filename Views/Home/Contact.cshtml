@model dynamic
@{
    ViewBag.Title = "Contact";
}
<div class="container mx-auto p-6 bg-white shadow-lg rounded-lg mt-6">
    <main aria-labelledby="title">
        <h2 id="title" class="text-2xl font-bold text-gray-800 mb-4">@ViewBag.Title</h2>
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded mb-4" role="alert">
                @ViewBag.Message
            </div>
        }

        <address class="text-gray-600 mb-4">
            One Microsoft Way<br />
            Redmond, WA 98052-6399<br />
            <abbr title="Phone" class="text-gray-500">P:</abbr>
            425.555.0100
        </address>

        <address class="text-gray-600">
            <strong class="text-gray-800">Support:</strong> <a href="mailto:Support@example.com" class="text-indigo-600 hover:text-indigo-800 underline">Support@example.com</a><br />
            <strong class="text-gray-800">Marketing:</strong> <a href="mailto:Marketing@example.com" class="text-indigo-600 hover:text-indigo-800 underline">Marketing@example.com</a>
        </address>
    </main>
</div>